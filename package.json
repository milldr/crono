{
  "name": "crono",
  "version": "0.1.0",
  "description": "CLI for Cronometer automation via Kernel.sh",
  "type": "module",
  "bin": {
    "crono": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "keywords": [
    "cronometer",
    "nutrition",
    "cli",
    "automation",
    "kernel"
  ],
  "author": "Daniel Miller",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@napi-rs/keyring": "^1.2.0",
    "@onkernel/sdk": "^0.33.0",
    "commander": "^12.0.0",
    "crono": "^0.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*": "prettier --check --ignore-unknown"
  }
}
